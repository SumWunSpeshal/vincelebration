---
import { AtTop } from "@/components/ui/at-top";
import { SyncLocalStorageToCookie } from "@/components/ui/sync-localstorage-to-cookie";
import "@/styles/globals.css";
import { ClientRouter } from "astro:transitions";
import Nav from "../components/Nav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="group overflow-x-hidden">
    <SyncLocalStorageToCookie client:only />
    <AtTop client:load />
    <Nav />
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Radikal";
    src: url("/radikal-light.woff2") format("woff2");
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Radikal";
    src: url("/radikal-regular.woff2") format("woff2");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Radikal";
    src: url("/radikal-medium.woff2") format("woff2");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }
</style>
