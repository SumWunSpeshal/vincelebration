---
import WidgetLoader from "@/components/WidgetLoader.astro";
import { Button } from "./ui/button";
---

<div class="fixed right-4 bottom-4">
  <WidgetLoader uploadPreset="vincelebration-user-upload" id="upload-events">
    <Button>
      <div class="flex">
        <img class="w-4" src="/upload.svg" alt="upload icon" />
        <div class="w-0 group-[.at-top]:w-auto overflow-hidden transition-all">
          <span class="pl-3">Upload</span>
        </div>
      </div>
    </Button>
  </WidgetLoader>
</div>
