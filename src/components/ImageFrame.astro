---
interface Props {
  wide?: boolean;
}

const { wide = false } = Astro.props;
---

<div class:list={["frame", wide && "wide"]}>
  <slot />
</div>

<style>
  .frame {
    aspect-ratio: 1;
    border: 0.375rem solid transparent;
    border-radius: 0.75rem;
    overflow: hidden;
    object-fit: cover;
  }

  :global(.frame img) {
    max-width: none !important;
    max-height: none !important;
    aspect-ratio: auto !important;
    width: 100%;
    height: 100%;
  }

  @media (width >= 600px) {
    .wide {
      aspect-ratio: 2;
      grid-column: span 2;
    }
  }
</style>
